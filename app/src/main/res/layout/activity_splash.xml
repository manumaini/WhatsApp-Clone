<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SplashActivity"
    android:background="@drawable/grediant">


    <ImageView
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_whatsapp_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/welcometext"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:layout_marginTop="56dp"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:text="Welcome To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcometext"
        android:textColor="#FFFFFF"
        android:textSize="44sp"
        android:textStyle="bold"
        android:text="WhatsApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_above="@id/Splash_continue"
        android:layout_marginTop="96dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:text="Read Our Privacy Policy\nto accept the terms and conditions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_above="@id/fromFacebook"
        android:layout_marginTop="16dp"
        android:id="@+id/Splash_continue"
        android:elevation="8dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="26dp"
        android:textSize="16sp"
        android:textColor="@color/green1"
        android:text="Agree &amp; Continue"
        android:background="@drawable/white_bg"
        android:layout_width="wrap_content"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/fromFacebook"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/white"
        android:text="From FACEBOOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>