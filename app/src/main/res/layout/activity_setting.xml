<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.SettingActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <androidx.appcompat.widget.Toolbar
        app:titleTextColor="@color/white"
        app:title="Settings"
        android:background="@color/green1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"/>

    <LinearLayout
        android:id="@+id/Setting_profileLayout"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Settings_userImage"
            android:src="@drawable/user_default"
            android:layout_width="86dp"
            android:layout_height="86dp"
            />

        <LinearLayout
            android:layout_marginHorizontal="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Settings_userName"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:text="User Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/Settings_userDesc"
                android:maxLines="5"
                android:textSize="14sp"
                android:text="Hi i am using WhatsApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>





    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/ic_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="normal"
            android:layout_marginLeft="18dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View style="@style/Divider" android:layout_marginLeft="32dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            app:tint="@color/green1"
            android:src="@drawable/ic_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="normal"
            android:layout_marginLeft="18dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Chats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View style="@style/Divider" android:layout_marginLeft="32dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/ic_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="normal"
            android:layout_marginLeft="18dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View style="@style/Divider" android:layout_marginLeft="32dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/ic_data_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="normal"
            android:layout_marginLeft="18dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Data Usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View style="@style/Divider" android:layout_marginLeft="32dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/ic_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="normal"
            android:layout_marginLeft="18dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="About us &amp; Help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View style="@style/Divider" android:layout_marginLeft="32dp"/>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/ic_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="normal"
            android:layout_marginLeft="18dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="Contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <View style="@style/Divider" android:layout_marginLeft="32dp"/>



</LinearLayout>