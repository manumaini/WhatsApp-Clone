<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Views.StatusViewActivity">

    <RelativeLayout
        android:id="@+id/profile_bar"
        android:gravity="center_vertical"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/StatusView_BackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back" />

        <TextView
            android:layout_toRightOf="@id/StatusView_BackButton"
            android:id="@+id/StatusView_UserName"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/StatusView_timeStamp"
            android:layout_alignParentEnd="true"
            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:text=""
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>



    <RelativeLayout
        android:padding="8dp"
        android:background="@color/grey4"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/StatusView_caption"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="this is the caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <ImageView
        android:layout_below="@id/profile_bar"
        android:id="@+id/StatusView_ImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_marginHorizontal="16dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/StatusView_prevButton"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back_ios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/StatusView_nextButton"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_forward_ios"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>