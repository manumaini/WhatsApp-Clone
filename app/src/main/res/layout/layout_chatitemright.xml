<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="16dp">

    <RelativeLayout
        android:paddingHorizontal="16dp"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="100dp"
        android:paddingVertical="4dp"
        android:background="@drawable/rightchat_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ChatLeftItem_Text"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="hi! my name is manav."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_toRightOf="@id/ChatLeftItem_Text"
            android:layout_alignBottom="@id/ChatLeftItem_Text"
            android:layout_marginLeft="16dp"
            android:text="8:30 pm"
            android:id="@+id/ChatLeftItem_Stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>




</RelativeLayout>